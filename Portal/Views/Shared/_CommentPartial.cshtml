@using MongoDB.Bson
@model Portal.Models.CommentViewModel
@{
    Model.ArticleId = ViewData["articleID"].ToString();
}

<form asp-area="" asp-controller="Home" asp-action="Comment" method="post" id="commentForm_@Model.ArticleId">
    <input type="hidden" asp-for="ArticleId" />
    <div class="input-group">
        <input asp-for="Comment" type="text" class="form-control" placeholder="Comment...">
        <span class="input-group-btn">
            <input type="submit" value="Add" class="btn btn-secondary" />
        </span>
    </div>
</form>